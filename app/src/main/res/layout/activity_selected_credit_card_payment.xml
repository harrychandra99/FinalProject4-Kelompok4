<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectedCreditCardPaymentActivity">
    <TextView
        android:id="@+id/tvSelectedCreditCardPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/payment"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvSelectedCreditCardPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSelectedCreditCardPayment"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <LinearLayout
            android:id="@+id/llSelectedCreditCardPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llSelectedCreditCardPayment2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvSelectedCreditCardPayment2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/total_payment" />

                <TextView
                    android:id="@+id/tvSelectedCreditCardPayment3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rp332_333_00"
                    android:textColor="@color/purple_500"
                    android:textSize="30sp" />
            </LinearLayout>

            <View
                android:id="@+id/vSelectedCreditCardPayment"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/llSelectedCreditCardPayment3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/tvSelectedCreditCardPayment4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/please_select_one_of_the_payment_method_below"
                    android:padding="3dp"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSelectedCreditCardPayment2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvSelectedCreditCardPayment"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <LinearLayout
            android:id="@+id/llSelectedCreditCardPayment4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_margin="4dp">

            <TextView
                android:id="@+id/tvSelectedCreditCardPayment5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Card Number"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:id="@+id/llSelectedCreditCardPayment5"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/btn_input_white_smoke"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivSelectedCreditCardPayment"
                    android:layout_width="45dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tvSelectedCreditCardPayment6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    "
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/edtSelectedCreditCardPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/SecretNumber"
                    android:inputType="phone"
                    android:layout_margin="10sp"
                    android:maxLength="4"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/edtSelectedCreditCardPayment2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/SecretNumber"
                    android:inputType="phone"
                    android:layout_margin="10sp"
                    android:maxLength="4"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/edtSelectedCreditCardPayment3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/SecretNumber"
                    android:inputType="phone"
                    android:layout_margin="10sp"
                    android:maxLength="4"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/edtSelectedCreditCardPayment4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/SecretNumber"
                    android:inputType="phone"
                    android:layout_margin="10sp"
                    android:maxLength="4"
                    android:gravity="center"/>
            </LinearLayout>
            <Space
                android:id="@+id/spcSelectedCreditCardPayment"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <TextView
                android:id="@+id/tvSelectedCreditCardPayment7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/valid_until"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:id="@+id/llSelectedCreditCardPayment6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edtSelectedCreditCardPayment5"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_input_white_smoke"
                    android:hint="@string/month" />

                <Space
                    android:id="@+id/spcSelectedCreditCardPayment2"
                    android:layout_width="30sp"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/edtSelectedCreditCardPayment6"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_input_white_smoke"
                    android:hint="@string/year"
                    android:maxLength="4"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvSelectedCreditCardPayment8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/card_holder"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/edtSelectedCreditCardPayment7"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white_smoke"
                android:hint="@string/surename" />
            <Space
                android:id="@+id/spcSelectedCreditCardPayment3"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/tvSelectedCreditCardPayment9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vcc"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/black"/>
            <LinearLayout
                android:id="@+id/llSelectedCreditCardPayment7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edtSelectedCreditCardPayment8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white_smoke"
                    android:hint="Surename"
                    android:maxLength="3"/>
                <TextView
                    android:id="@+id/tvSelectedCreditCardPayment10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last three digit on ypur card"
                    android:layout_weight="1"/>

            </LinearLayout>
            <Space
                android:id="@+id/spcSelectedCreditCardPayment4"
                android:layout_width="0dp"
                android:layout_height="30dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSelectedCreditCardPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:background="@drawable/btn_custome_seat_option"
        android:enabled="false"
        android:padding="16dp"
        android:text="Verify Payment"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvSelectedCreditCardPayment2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>