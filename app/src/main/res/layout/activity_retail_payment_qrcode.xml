<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RetailPaymentQRCodeActivity"
    android:padding="16dp"
    android:layout_margin="50sp">
    <TextView
        android:id="@+id/tvRetailPaymentQrCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alfamart Payment Code"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/ivRetailPaymentQrCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/qrcode"
        app:layout_constraintTop_toBottomOf="@id/tvRetailPaymentQrCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40sp"/>
    <TextView
        android:id="@+id/tvBackActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back To Detail"
        android:textSize="20sp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/purple_500"
        android:textAllCaps="true"
        app:layout_constraintTop_toBottomOf="@id/ivRetailPaymentQrCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:layout_marginTop="40sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>